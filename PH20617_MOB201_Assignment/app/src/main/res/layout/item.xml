<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/LL"
    android:padding="10dp"
    android:background="@color/teal_200"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Tin tức địa phương"
        android:textSize="25dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img"
            android:layout_width="227dp"
            android:layout_height="95dp"
            android:scaleType="centerCrop"
            android:src="@color/black" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtGioiThieu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tin tức thời tiết hôm nay 3.10.2022, Trung tâm Dự báo khí tượng thủy văn quốc gia cho biết, trong 24 giờ qua, khu vực Thanh Hóa đến Quảng Bình có mưa vừa, mưa to, có nơi mưa rất to và giông."
                android:textStyle="italic|bold" />

        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/txtNgay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="05/10/2022"
        android:textStyle="italic" />


</LinearLayout>